/**
 * Base Reset thingies
 */
picture,img { max-width: 100%; }


/**
 * Helpers
 */
.svg-definitions { display: none; }

.icon-svg--star { width: 20px; }


/**
 * Typography helpers
 */
.section-title--hed {
  text-transform: uppercase;
  font-size: 24px;
  padding-top: 0;
}

.section-homepage--helping_hand .section-title--hed,
.section-homepage--testimonials .section-title--hed,
.section-homepage--testimonials .section-title--dek,
.section-homepage--testimonials .testimonial-quote,
.section-homepage--testimonials .testimonial-title,
.section-homepage--products .section-title--hed,
.section-homepage--products .info {
  color: #8a8c8f;
}

.section-homepage--testimonials .testimonial-author,
.section-homepage--helping_hand .section-title--hed span {
  font-family: 'blackjack';
  color: #ff8b81;
}


/**
 * Font Families
 */
@font-face {
    font-family: 'blackjack';
    src: url('blackjack-webfont.eot');
    src: url('blackjack-webfont.eot?#iefix') format('embedded-opentype'),
         url('blackjack-webfont.woff') format('woff'),
         url('blackjack-webfont.ttf') format('truetype'),
         url('blackjack-webfont.svg#black_jackregular') format('svg');
    font-weight: normal;
    font-style: normal;

}


/**
 * Buttons
 */
.btn-primary {
  background-color: #8a8c8f;
  text-transform: uppercase;
  color: #fff;
  min-width: 150px;
  padding: 15px 30px;
  font-weight: 400;
  font-size: 18px;
}


/**
 * promo banners!
 */
.promo-banner {
  background-color: rgba(135, 209, 210, 1);
  padding: 5px 10px;
}
.promo-text {
  margin: 0;
  padding: 0;
  color: #fff;
  font-weight: normal;
  text-transform: uppercase;
}

/**
 * Homepage - Helping Hand
 */

.container.section-homepage--helping_hand {
  padding-top: 75px;
  padding-bottom: 75px;
}

.section-homepage--helping_hand .section-title--hed {
  text-transform: uppercase;
  position: relative;
  margin-bottom: 0;
  padding-bottom: 0;
}

.section-homepage--helping_hand .section-title--hed span {
  padding: 0;
  margin: -16px 0 0 50px;
  display: block;
  position: relative;
  z-index: -1;
  text-transform: capitalize;
  font-size: 105px;
  line-height: 1;
}
.section-homepage--helping_hand .section-image {
  position: relative;
  display: inline-block;
  line-height: 0;
  z-index: 10;
}
.section-homepage--helping_hand .section-image:before,
.section-homepage--helping_hand .section-image:after {
  position: absolute;
  max-width: 360px;
  max-height: 200px;
  width: 60%;
  height: 100%;
  display: block;
  content: "";
  z-index: -1;
  border: 5px solid transparent;
  border-image-source: url('svg-icon--x_border.svg?20161113');
  border-image-repeat: round;
  border-image-slice: 60;
  opacity: .75;
}
.section-homepage--helping_hand .section-image:before {
  top: -15px;
  left: -15px;
}
.section-homepage--helping_hand .section-image:after {
  right: -15px;
  bottom: -15px;
}

@media only screen and (max-width: 767px) {
  .section-homepage--helping_hand > div { text-align: center; }
  .section-homepage--helping_hand .section-image:before,
  .section-homepage--helping_hand .section-image:after {
    border-image-slice: 30;
  }
}

@media only screen and (min-width: 480px) and (max-width: 767px) {
  .section-homepage--helping_hand .section-image {
    max-width: 80%;
    margin-left: auto;
    margin-right: auto;
  }
  .section-homepage--helping_hand .section-image:before,
  .section-homepage--helping_hand .section-image:after {
    max-width: 80%;
    max-height: 80%;
    border-image-slice: 40;
    border-size: 6px;
  }
  .section-homepage--helping_hand .section-image:before {
    top: -15px;
    left: -15px;
  }
  .section-homepage--helping_hand .section-image:after {
    right: -15px;
    bottom: -15px;
  }
}

@media only screen and (min-width: 768px) and (max-width: 959px) {
  .section-homepage--helping_hand .section-image:before,
  .section-homepage--helping_hand .section-image:after {
    max-width: 360px;
    max-height: 200px;
    border-image-slice: 40;
  }
  .section-homepage--helping_hand .section-image:before {
    top: -15px;
    left: -15px;
  }
  .section-homepage--helping_hand .section-image:after {
    right: -15px;
    bottom: -15px;
  }
}

@media only screen and (min-width: 960px) and (max-width: 1199px) {
  .section-homepage--helping_hand .section-image:before,
  .section-homepage--helping_hand .section-image:after {
    max-width: 360px;
    max-height: 200px;
    border-image-slice: 60;
  }
  .section-homepage--helping_hand .section-image:before {
    top: -15px;
    left: -15px;
  }
  .section-homepage--helping_hand .section-image:after {
    right: -15px;
    bottom: -15px;
  }
}




/**
 * Homepage - Testimonials!
 */

.section-homepage--testimonials {
  padding-bottom: 80px;
  text-align: center;
  background-color: rgba(255,153,153,.25) /* #ff9999 */
}

.section-homepage--testimonials .testimonials-container {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: stretch;
  align-content: stretch;
}
.section-homepage--testimonials .testimonial {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}

.section-homepage--testimonials .testimonial-quote {
  background-color: transparent;
  margin: 0 0 30px;
  padding: 0;
  text-align: center;
  font-size: 15px;
  line-height: 1.5;
}

.section-homepage--testimonials .testimonial-title,
.section-homepage--testimonials .testimonial-title span {
  display: block;
}

.section-homepage--testimonials .testimonial-author {
  font-size: 32px;
}


/**/

.section-homepage--products {
  text-align: center;
  padding-bottom: 80px;
}
.section-homepage--products .section-title--hed {
  position: relative;
  margin-top: 80px;
  margin-bottom: 0;
}
.section-homepage--products .section-title--hed span {
  display: inline-block;
  position: relative;
  padding: 0 15px;
  background-color: #fff;
}
.section-homepage--products .section-title--hed:before,
.section-homepage--products .section-title--hed span:before {
  display: block;
  width: 100%;
  height: 100%;
  content: "";
  position: absolute;
  top: 0;
  left: 0;
}
.section-homepage--products .section-title--hed:before {
  z-index: -1;
  background-image: url('icon--triangles.png');
  background-repeat: repeat-x;
  background-position: left center;
  opacity: .4;
}
.section-homepage--products .products-row {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: stretch;
  align-content: center;
  padding-bottom: 80px;
}
.section-homepage--products .product {
  margin: 0 10px;
  box-sizing: border-box;
}

@media only screen and (max-width: 767px) {
  .section-homepage--products {
    padding-bottom: 30px;
  }
  .section-homepage--products .section-title--hed {
    margin-top: 30px;
    margin-bottom: 0;
  }
  .section-homepage--products .products-row {
    padding-bottom: 30px;
  }
}

@media only screen and (min-width: 480px) and (max-width: 767px) {
  .section-homepage--products .products-row {
    flex-flow: row wrap;
  }

  .section-homepage--products .product {
    width: 50%;
    margin: 0 0 20px 0;
    padding: 0 20px;
  }
}

@media only screen and (max-width: 480px) {
.section-homepage--products .section-title--hed:before {
  background-image: none;
}
  .section-homepage--products .products-row {
    flex-flow: row wrap;
  }
  .section-homepage--products .product {
    width: 100%;
    margin: 0 0 20px 0;
    padding: 0 20px;
  }
}
